<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_padding_lr"
    android:paddingRight="@dimen/activity_padding_lr"
    tools:context=".H24Activity">
    <TextView
        android:id="@+id/textViewtitle"
        android:layout_width="fill_parent"
        android:layout_marginTop="30px"
        android:gravity="center"
        android:text="24小时天气"
        android:textColor="@color/tips"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:id="@+id/list_24h"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:textColor="@color/ba_1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:divider="@drawable/list_view_style"
        android:dividerHeight="0.5px">
    </ListView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/back"
            android:contentDescription="返回"
            android:layout_margin="20dp" />
    </FrameLayout>
</LinearLayout>

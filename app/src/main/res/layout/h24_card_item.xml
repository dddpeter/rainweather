<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/h24_card_background"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- 时间区域 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/h24_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/x_blue"
                android:textSize="16sp"
                android:text="今天"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <!-- 天气图标 -->
        <ImageView
            android:id="@+id/info_typeimg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/notclear"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent" />

        <!-- 中间信息区域 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/info_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/x_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="多云"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/info_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/x_gray"
                android:textSize="12sp"
                android:text="东北风 3级"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <!-- 温度区域 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/info_temprature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/x_yellow"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="25°"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/info_feels_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/x_gray"
                android:textSize="10sp"
                android:text="体感 26°"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myblue"
    android:orientation="vertical"
    tools:context=".TodayActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/notclear" />

    <TextView
        android:id="@+id/city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center"
        android:text="@string/weather_content"
        android:textColor="@color/tips"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center_horizontal"
        android:text="@string/blank_string"
        android:textColor="@color/tips"
        android:textStyle="bold"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/wendu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center_horizontal"
        android:text="@string/blank_string"
        android:textColor="@color/black_overlay"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/wendugd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center_horizontal"
        android:text="@string/blank_string"
        android:textColor="@color/black_overlay"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/wind"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center_horizontal"
        android:text="@string/blank_string"
        android:textColor="@color/black_overlay"
        android:textSize="20sp" />
    <com.xuexiang.xui.widget.progress.HorizontalProgressView
        android:id="@+id/air"
        android:layout_width="match_parent"
        app:hpv_end_color="#FF0000"
        app:hpv_end_progress="100"
        app:hpv_isTracked="true"
        app:hpv_progress_duration="2600"
        app:hpv_corner_radius="0dp"
        app:hpv_progress_textVisibility="false"
        app:hpv_start_color="@color/ba_1"
        app:hpv_track_color="@color/black_overlay"
        android:layout_margin="8dp"
        app:hpv_track_width="15dp"
        app:hpv_start_progress="0"
        android:layout_height="15dp" />
    <TextView
        android:id="@+id/air_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/tips"
        android:textSize="15sp" />
    <RelativeLayout
        android:id="@+id/recent_today"
        android:layout_width="match_parent"
        android:background="@color/myblue"
        android:padding="8dp"
        android:textColor="@color/myblue"
        android:layout_height="200dp">
    </RelativeLayout>
    <TextView
        android:id="@+id/ganmao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="start"
        android:text="@string/blank_string"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="@color/tips"
        android:textColor="@color/ba_1"
        android:textSize="18sp" />


</LinearLayout>
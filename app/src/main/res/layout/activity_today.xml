<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/today"
    android:paddingLeft="@dimen/activity_padding_lr"
    android:paddingRight="@dimen/activity_padding_lr"
    tools:context=".TodayActivity">
    <LinearLayout
        android:id="@+id/top_pic"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@color/skyblue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroud"
            android:orientation="vertical">
            <TextView
                android:id="@+id/city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/fontWhite"
                android:text="北京"
                android:background="@color/xui_transparent"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/xui_transparent"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@color/xui_transparent"
                    >
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:contentDescription="@string/app_name"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:background="@color/xui_transparent"
                        android:src="@drawable/notclear" />
                    <TextView
                        android:id="@+id/type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="晴"
                        android:textColor="@color/fontWhite"
                        android:background="@color/xui_transparent"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:background="@color/xui_transparent"
                    android:paddingTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/wendu"
                        android:layout_width="wrap_content"
                        android:gravity="top|center"
                        android:text="10°"
                        android:textColor="@color/fontWhite"
                        android:layout_height="70dp"
                        android:background="@color/xui_transparent"
                        android:textSize="35sp" />


                    <TextView
                        android:id="@+id/wendu_low"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="低温 10°"
                        android:textColor="@color/fontWhite"
                        android:layout_marginBottom="3dp"
                        android:background="@color/xui_transparent"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/wendu_high"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="高温 20°"
                        android:textColor="@color/fontWhite"
                        android:layout_marginBottom="3dp"
                        android:background="@color/xui_transparent"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/wind"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/fontWhite"
                        android:text="南风(1级)"
                        android:background="@color/xui_transparent"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/shidu"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="湿度"
                        android:textColor="@color/fontWhite"
                        android:layout_marginBottom="3dp"
                        android:background="@color/xui_transparent"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/aqi">
    </ImageView>
    <TextView
        android:id="@+id/air_text"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:gravity="center|top"
        android:text="良好"
        android:textStyle="bold"
        android:textColor="@color/tips"
        android:textSize="14sp" />
    <RelativeLayout
        android:id="@+id/recent_today"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/view_padding_lr"
        android:paddingLeft="@dimen/view_padding_lr"
        android:layout_height="140dp">

    </RelativeLayout>
    <TextView
        android:id="@+id/ganmao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="start|top"
        android:text=""
        android:padding="15dp"
        android:textColor="@color/tips"
        android:textSize="15sp" />
    <LinearLayout
        android:id="@+id/redirect"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        >

        <Button
            android:id="@+id/h24_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="24小时天气"
            android:textSize="18sp"
            android:background="@color/colorPrimary"
            android:layout_weight="10">
        </Button>

        <Button
            android:id="@+id/main_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="主要城市天气"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/myorange"
            >
        </Button>
    </LinearLayout>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/today"
    android:paddingLeft="@dimen/activity_padding_lr"
    android:paddingRight="@dimen/activity_padding_lr"
    tools:context=".TodayActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/notclear" />

    <TextView
        android:id="@+id/city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center"
        android:text="🥺🥺🥺💢"
        android:textColor="@color/tips"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center_horizontal"
        android:text="@string/blank_string"
        android:textColor="@color/tips"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/wendu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center_horizontal"
        android:text="@string/blank_string"
        android:textColor="@color/black_overlay"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/wendugd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center_horizontal"
        android:text="@string/blank_string"
        android:textColor="@color/black_overlay"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/wind"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center_horizontal"
        android:text="@string/blank_string"
        android:textColor="@color/black_overlay"
        android:textSize="20sp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/view_padding_lr"
        android:paddingBottom="@dimen/view_padding_lr"
        android:scaleType="centerInside"
        android:src="@drawable/aqi"
        ></ImageView>

    <TextView
        android:id="@+id/air_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/tips"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/recent_today"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/view_padding_lr"
        android:paddingLeft="@dimen/view_padding_lr"
        android:layout_height="180dp">

    </RelativeLayout>

    <TextView
        android:id="@+id/ganmao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="start"
        android:text="@string/title_activity_about"
        android:padding="15dp"
        android:textColor="@color/tips"
        android:textSize="16sp" />
    <LinearLayout
        android:id="@+id/redirect"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        >

        <Button
            android:id="@+id/h24_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="24小时天气"
            android:textSize="18sp"
            android:background="@color/colorPrimary"
            android:layout_weight="10">
        </Button>

        <Button
            android:id="@+id/main_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="主要城市天气"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/myorange"
            >
        </Button>
    </LinearLayout>

</LinearLayout>
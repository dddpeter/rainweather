<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myblue"
    android:orientation="vertical"
    tools:context=".TodayActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        android:src="@drawable/notclear" />

    <TextView
        android:id="@+id/city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center_horizontal"
        android:text="@string/weather_content"
        android:textColor="@color/black_overlay"
        android:textStyle="bold"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center_horizontal"
        android:text="@string/blank_string"
        android:textColor="@color/black_overlay"
        android:textStyle="bold"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/wendu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center_horizontal"
        android:text="@string/blank_string"
        android:textColor="@color/black_overlay"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/wendugd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center_horizontal"
        android:text="@string/blank_string"
        android:textColor="@color/black_overlay"
        android:textStyle="bold"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/wind"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center_horizontal"
        android:text="@string/blank_string"
        android:textColor="@color/black_overlay"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ganmao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="start"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/blank_string"
        android:radius="15dp"
        android:padding="8dp"
        android:background="@color/ba_1"
        android:textColor="@color/tips"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/other"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_weight="20"
        android:gravity="start"
        android:text="@string/blank_string"
        android:textColor="@color/black_overlay"
        android:textStyle="bold"
        android:textSize="20sp" />
</LinearLayout>
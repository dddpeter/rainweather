<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_padding_lr"
    android:paddingRight="@dimen/activity_padding_lr"
    tools:context=".AboutActivity">
    <TextView
        android:id="@+id/historyinfo_title"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="6dp"
        android:textColor="@color/tips"
        android:text="历史上的今天"/>
    <ListView
        android:id="@+id/lvTrace"
        android:layout_width="match_parent"
        android:layout_weight="20"
        android:divider="@null"
        android:clickable="false"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="0dp"
        android:layout_height="300dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/mybord"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/dddpeter_logo"
                android:background="@color/mybord"
                android:layout_marginBottom="10dp"
                android:paddingTop="5dp"
                >
            </ImageView>
            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/mybord"
                android:text="软件作者：烈焰之雨"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/mybord"
                android:text="电子邮件：dddpeter@126.com"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />
        </LinearLayout>
    <Button
        android:id="@+id/blog_btn"
        android:layout_width="200dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center"
        android:background="@color/myorange"
        android:text="😁去我的博客💯"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

</LinearLayout>
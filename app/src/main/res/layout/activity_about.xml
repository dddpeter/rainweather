<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_padding_lr"
    android:paddingRight="@dimen/activity_padding_lr"
    tools:context=".AboutActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="@color/cardview_light_background"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/view_padding_lr"
        android:src="@drawable/dddpeter_logo" />

    <TextView
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="15"
        android:gravity="center_vertical"
        android:lineHeight="35sp"
        android:paddingLeft="@dimen/view_padding_lr"
        android:paddingRight="@dimen/view_padding_lr"
        android:text="知雨天气"
        android:textColor="@color/black_overlay"
        android:textSize="23sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:background="@color/contact"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@color/contact"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="软件作者：烈焰之雨"
                android:textColor="@color/tips"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@color/contact"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="电子邮件：dddpeter@126.com"
                android:textColor="@color/tips"
                android:textSize="20sp" />
        </LinearLayout>
    <Button
        android:id="@+id/blog_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:text="😁去我的博客💯"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp" />

</LinearLayout>
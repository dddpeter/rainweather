<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="?android:attr/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 头部区域：天气信息（参考Flutter设计） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_gradient_background"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="80dp">

                <!-- 内容容器 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <!-- 城市名称 -->
                    <TextView
                        android:id="@+id/tv_city_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:text="北京"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="北京" />

                    <!-- 主要天气信息 - 左右分栏布局 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- 左侧：天气图标区域（45%宽度，右对齐） -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="45"
                            android:gravity="end"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_weather_icon"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_weather_default" />
                        </LinearLayout>

                        <!-- 中间间距 -->
                        <View
                            android:layout_width="24dp"
                            android:layout_height="1dp" />

                        <!-- 右侧：温度和天气描述区域（55%宽度，左对齐） -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="55"
                            android:gravity="start"
                            android:orientation="vertical">

                            <!-- 温度 -->
                            <TextView
                                android:id="@+id/tv_current_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25℃"
                                android:textColor="@color/white"
                                android:textSize="48sp"
                                android:textStyle="bold" />

                            <!-- 天气描述 -->
                            <TextView
                                android:id="@+id/tv_weather_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:letterSpacing="0.2"
                                android:text="晴"
                                android:textColor="#E8F4FD"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 农历日期（如果有） -->
                    <TextView
                        android:id="@+id/tv_lunar_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:letterSpacing="0"
                        android:text="农历十月十五"
                        android:textColor="#E8F4FD"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 详细信息卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:padding="16dp">

                    <!-- 体感温度 -->
                    <LinearLayout style="@style/DetailItem">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_thermometer"
                                android:contentDescription="体感温度图标" />
                            <TextView
                                android:text="体感温度"
                                android:layout_marginStart="6dp"
                                style="@style/DetailLabel" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_feels_like"
                            android:text="26℃"
                            style="@style/DetailValue" />
                    </LinearLayout>

                    <!-- 湿度 -->
                    <LinearLayout style="@style/DetailItem">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_humidity"
                                android:contentDescription="湿度图标" />
                            <TextView
                                android:text="湿度"
                                android:layout_marginStart="6dp"
                                style="@style/DetailLabel" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_humidity"
                            android:text="60%"
                            style="@style/DetailValue" />
                    </LinearLayout>

                    <!-- 风力 -->
                    <LinearLayout style="@style/DetailItem">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_wind"
                                android:contentDescription="风力图标" />
                            <TextView
                                android:text="风力"
                                android:layout_marginStart="6dp"
                                style="@style/DetailLabel" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_wind"
                            android:text="东风3级"
                            style="@style/DetailValue" />
                    </LinearLayout>

                    <!-- AQI -->
                    <LinearLayout style="@style/DetailItem">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_air_quality"
                                android:contentDescription="空气质量图标" />
                            <TextView
                                android:text="空气质量"
                                android:layout_marginStart="6dp"
                                style="@style/DetailLabel" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_aqi"
                            android:text="优"
                            style="@style/DetailValue" />
                    </LinearLayout>
                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 24小时预报（横向滚动） -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_clock"
                            android:contentDescription="时钟图标" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="24小时预报"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_hourly_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        tools:itemCount="5"
                        tools:listitem="@layout/item_hourly_weather" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 7日温度图表 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_chart"
                            android:contentDescription="图表图标" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="7日温度趋势"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_temperature"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 日出日落时间线 -->
            <com.dddpeter.app.rainweather.ui.widgets.SunMoonTimelineWidget
                android:id="@+id/sun_moon_timeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <!-- 生活指数 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_info"
                            android:contentDescription="生活指数图标" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="生活指数"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_life_index"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="6"
                        tools:listitem="@layout/item_life_index" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 底部间距 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


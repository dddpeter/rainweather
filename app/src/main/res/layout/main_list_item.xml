<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/main_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/card_glass_background">

        <!-- 左侧：城市名和图片 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/transparent">

            <!-- 天气图标 -->
            <ImageView
                android:id="@+id/info_wimg"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/notclear"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/imgTodoStr" />

            <!-- 城市名称 -->
            <TextView
                android:id="@+id/main_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/x_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:text="城市名称" />
        </LinearLayout>

        <!-- 中间：气候 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/main_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/x_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:text="晴天" />
        </LinearLayout>

        <!-- 右侧：温度和风力 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/main_tempratuare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/x_yellow"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:text="26°C" />

            <TextView
                android:id="@+id/main_fengli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/x_green"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:text="南风 3级" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
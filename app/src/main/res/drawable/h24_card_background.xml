<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 渐变背景 - 与城市天气列表一致的毛玻璃效果 -->
    <gradient
        android:type="linear"
        android:angle="135"
        android:startColor="#4DFFFFFF"
        android:centerColor="#2DFFFFFF"
        android:endColor="#1AFFFFFF" />
    
    <!-- 圆角 -->
    <corners android:radius="12dp" />
    
    <!-- 边框 -->
    <stroke
        android:width="0.3dp"
        android:color="@color/x_white" />
</shape>
